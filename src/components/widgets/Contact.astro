---
import FormContainer from '~/components/ui/Form.astro';
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { Contact as Props } from '~/types';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  inputs,
  textarea,
  disclaimer,
  button,
  description,
  requiredFields,
  tipo,
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

// Generar título si no está definido, basado en el tipo de calendario
let formTitle = title || `Presupuesto para Calendario ${tipo?.replace('-', ' ') || ''}`;
const tipoValue = tipo || 'Calendario Genérico'; // Valor predeterminado si `tipo` es undefined
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-2xl mx-auto ${classes?.container ?? ''}`} bg={bg}>

  {inputs && (
    <div class="flex flex-col max-w-xl mx-auto rounded-lg backdrop-blur border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900 shadow p-4 sm:p-6 lg:p-8 w-full">
      <FormContainer
        id={id ?? 'form-contact'}
        inputs={inputs}
        textarea={textarea}
        disclaimer={disclaimer}
        button={button}
        description={description}
        requiredFields={requiredFields}
        tipo={tipoValue} 
        method="POST"
        action="/api/send-email"
      />
    </div>
  )}
</WidgetWrapper>
