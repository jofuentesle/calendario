---
import Layout from '~/layouts/LandingLayout2.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import CallToActionProps from '~/components/widgets/CallToAction.astro';
import { AstroSeo } from '@astrolib/seo';

import Img1 from '~/assets/images/pared/ParedRevista.jpg';
import Img2 from '~/assets/images/pared/ParedRevista1.jpg';
import Img3 from '~/assets/images/pared/ParedRevista2.jpg';
import Img4 from '~/assets/images/pared/ParedRevista3.jpg';

const galleryImages = [
    { src: Img1.src, alt: 'Calendario de pared tipo revista 2025' },
    { src: Img2.src, alt: 'Calendario de pared 2025 con espiral, diseño personalizado' },
    { src: Img3.src, alt: 'Calendario tipo revista personalizado para empresas 2025' },
    { src: Img4.src, alt: 'Calendario promocional de pared con espiral 2025' },
];

// Metadatos optimizados
const metadata = {
  title: "Calendarios de Pared Personalizados Tipo Revista | Reprodisseny Barcelona",
  description: "Compra calendarios tipo revista personalizados para pared 2025 en Barcelona. Alta calidad y diseño para empresas.",
  keywords: [
    "Calendarios personalizados Barcelona",
    "Calendarios pared tipo revista",
    "Impresión de calendarios Barcelona",
    "Calendarios pared publicitarios",
    "Calendarios de empresa 2025",
    "Calendarios de pared de diseño",
    "Calendarios pared Reprodisseny"
  ],
  canonical: "https://calendarios.reprodisseny.com/calendarios-pared-revista",
};

// Datos estructurados JSON-LD
const jsonLdData = {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": "Calendarios de Pared Personalizados Tipo Revista",
  "description": "Personaliza calendarios de pared tipo revista para 2025. Ideal para empresas que buscan promocionarse con estilo.",
  "image": "https://calendarios.reprodisseny.com/images/pared/ParedRevista.jpg", // URL completa de la imagen principal
  "brand": {
    "@type": "Brand",
    "name": "Repro Disseny"
  },
  "offers": {
    "@type": "Offer",
    "url": "https://calendarios.reprodisseny.com/calendarios-pared-revista",
    "priceCurrency": "EUR",
    "price": "5.99",
    "availability": "https://schema.org/InStock"
  },
  "keywords": "Calendarios personalizados Barcelona, Calendarios pared revista, Impresión calendarios Barcelona"
};

// Insertar datos estructurados como script en el HTML
const scriptTag = document.createElement("script");
scriptTag.type = "application/ld+json";
scriptTag.text = JSON.stringify(jsonLdData);
document.head.appendChild(scriptTag);



// Mejorar contenido SEO
const title = "Calendarios de Pared Personalizados Tipo Revista";
const subtitle = "Consigue calendarios de pared tipo revista personalizados para 2025. Ideales para empresas que quieren promocionar su marca con calendarios de alta calidad. Pide tu oferta personalizada hoy.";
const tagline = "calendarios pared revista";
---

<Layout>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline={tagline}
    title={title}
    subtitle={subtitle}
    actions={[
      { variant: 'primary', text: 'Pide tu oferta!', href: `/solicitud-presupuesto`, icon: 'tabler:square-rounded-arrow-right' },
      { text: 'Saber más', href: '#features' },
    ]}
    galleryImages={galleryImages}
    
  />
  
  
  <Features 
  id="features"
  tagline="Características Clave"
  title="¿Por qué elegir nuestros calendarios de pared"
  subtitle="Impresión de alta calidad y diseño atractivo para promocionar tu marca durante todo el año a un precio muy competitivo."
  items={[
    {
      title: 'Impresión Personalizada',
      description: 'Personaliza calendarios tipo revista para pared con tu logotipo y diseño único. Ideales para promociones tu negocio de forma fàcil.',
      icon: 'tabler:calendar',
    },
    {
      title: 'Alta Calidad de Impresión',
      description:
        'Usamos tecnología de impresión avanzada para asegurar que cada calendario sea visualmente atractivo y duradero.',
      icon: 'tabler:printer',
    },
    {
      title: 'Diseño Promocional',
      description:
        'Destaca tu marca todo el año con nuestros calendarios de pared que combinan funcionalidad y estética.',
      icon: 'tabler:printer',
    },
    {
      title: 'Entrega rápida en toda la península',
      description:
        'Ofrecemos tiempos de entrega rápidos para que recibas tus calendarios cuando los necesites.',
      icon: 'tabler:truck',
    },
    {
      title: 'Ideal para Empresas',
      description:
        'Perfectos para empresas que buscan soluciones publicitarias duraderas y efectivas.',
      icon: 'tabler:building',
    },
    {
      title: 'Fácil Instalación',
      description:
        'Nuestros calendarios con espiral son fáciles de colgar, adaptándose a cualquier espacio de trabajo.',
      icon: 'tabler:wall',
    },
  ]}
/>

    <!-- CallToAction (2/3 width on large screens) -->
    <CallToActionProps 
      title={title}
      subtitle={subtitle}
      tagline={tagline}
      actions={[
        {
          variant: 'primary',
          text: 'Solicita tu presupuesto personalizado',
          href: `/solicitud-presupuesto`,
          icon: 'tabler:mail', // Icono SVG
        },
      ]}  
      id="cta-calendarios-pared-revista"
      isDark={false}
      classes={{ container: 'custom-container-class' }}
    /> 
</Layout>

