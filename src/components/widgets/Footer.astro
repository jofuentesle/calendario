---
import { Icon } from 'astro-icon/components';
import { getPermalink } from '~/utils/permalinks';

const { socialLinks = [], footNote = '', theme = 'light' } = Astro.props;
---

<footer class:list={[{ dark: theme === 'dark' }, 
'relative border-t border-gray-200 dark:border-slate-800 not-prose']}>
  <div class="dark:bg-dark absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  <div class="relative max-w-7xl mx-auto px-2 sm:px-4 dark:text-slate-300">
    <!-- Contenedor principal -->
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-1 min-h-[120px] items-center lg:flex lg:justify-between lg:space-x-4">
      
      <!-- Sección de contacto e información de la empresa -->
      <div class="lg:w-1/3 text-center lg:text-left">
        <div class="text-sm text-muted flex flex-col gap-1">
          <div class="flex items-center justify-center lg:justify-start">
            <Icon name="tabler:phone-call" class="w-5 h-5 mr-2 text-gray-500" />
            <a href="tel:+34932749890" class="hover:underline">+34 93 274 98 90</a>
          </div>
          <div class="flex items-center justify-center lg:justify-start">
            <Icon name="tabler:mail-opened" class="w-5 h-5 mr-2 text-gray-500" />
            <a href="mailto:repro@reprodisseny.com" class="hover:underline">repro@reprodisseny.com</a>
          </div>
          <div class="flex items-center justify-center lg:justify-start">
            <Icon name="tabler:map-pin" class="w-5 h-5 mr-2 text-gray-500" />
            <span>Juan de Mena 19, 08035, Barcelona</span>
          </div>
        </div>
      </div>

      <!-- Menú de calendarios -->
      <div class="lg:w-1/3 text-center lg:text-left">
        <nav class="flex flex-col lg:flex-row space-y-1 lg:space-y-0 lg:space-x-2">
          <a
            class="dark:text-gray-300 pb-1 font-medium mb-2 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
            href={getPermalink('/calendario-mesa-triangular')}
          >
            Mesa triangular
          </a>
          <a
            class="dark:text-gray-300 font-medium mb-2 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
            href={getPermalink("/calendario-mesa-espiral")}
          >
            Mesa espiral
          </a>
          <a
            class="dark:text-gray-300 font-medium mb-2 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
            href={getPermalink('/calendario-pared-revista')}
          >
            Pared revista
          </a>
          <a
            class="dark:text-gray-300 font-medium mb-2 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
            href={getPermalink('/calendario-pared-espiral')}
          >
            Pared espiral
          </a>
        </nav>
      </div>

      <!-- Redes sociales -->
      <div class="lg:w-1/3 flex justify-center lg:justify-end">
        <ul class="flex space-x-4">
          {socialLinks.map(({ ariaLabel, href, icon }) => (
            <li>
              <a
                class="text-muted dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2 inline-flex items-center"
                aria-label={ariaLabel}
                href={href}
              >
                {icon && <Icon name={icon} class="w-5 h-5" />}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Política de privacidad (al fondo) -->
    <div class="flex flex-col lg:flex-row justify-between items-center py-2 mt-2 border-t border-gray-200 dark:border-slate-800">
      <div class="text-xs dark:text-muted">
        <Fragment set:html={footNote} />
      </div>
      <div>
        <a href="#top" class="dark:text-gray-300 font-medium mb-2 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 15.75 7.5-7.5 7.5 7.5" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>

<style>
  .btnbottom {
    padding-bottom: 0px!important;
  }
</style>
