--- 
import FormContainer from '~/components/ui/Form.astro'; 
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro'; 
import type { Contact as Props } from '~/types'; 

const { 
  calendarType,
  isDark = false, 
  classes = {}, 
  bg = await Astro.slots.render('bg'), 
} = Astro.props;


const formInputs = [
  { name: 'nombre', label: 'Nombre', type: 'text', required: true, icon: 'user' },
  { name: 'email', label: 'Correo Electrónico', type: 'email', required: true, icon: 'email' },
  { name: 'telefono', label: 'Teléfono', type: 'tel', required: true, icon: 'phone' },
  { name: 'empresa', label: 'Empresa', type: 'text', icon: 'company' },
  { type: 'hidden', name: 'tipo_calendario', value: calendarType } // Campo oculto
];

const action = "/api/send-email"; // Ajusta según tu lógica
---

<WidgetWrapper isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <div class="flex flex-col max-w-xl mx-auto rounded-lg backdrop-blur border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900 shadow p-4 sm:p-6 lg:p-8 w-full">
    <FormContainer
      id="solicitud-presupuesto"
      method="POST"
      action={action}
      inputs={formInputs}
      disclaimer={{ required: true, label: 'Acepto las políticas de privacidad.' }}
    />
  </div>
</WidgetWrapper>

