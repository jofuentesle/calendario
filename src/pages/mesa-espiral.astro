---
import Layout from '~/layouts/LandingLayout2.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import CallToActionProps from '~/components/widgets/CallToAction.astro';

//Importamos images galeria
import Img1 from '~/assets/images/mesa/SobremesaEspiral.jpg';
import Img2 from '~/assets/images/mesa/SobremesaEspiral1.jpg';
import Img3 from '~/assets/images/mesa/SobremesaEspiral2.jpg';
import Img4 from '~/assets/images/mesa/SobremesaEspiral3.jpg';

const galleryImages = [
  { src: Img1.src, alt: 'Calendario de mesa con espiral personalizado 2025' },
  { src: Img2.src, alt: 'Calendario de mesa 2025 para empresas con espiral' },
  { src: Img3.src, alt: 'Diseño de calendario de mesa con espiral para empresas' },
  { src: Img4.src, alt: 'Calendario de mesa publicitario con espiral' },
];

const metadata = {
  title: "Calendarios de Mesa con Espiral | Personalización en Barcelona",
  description: "Impresión de calendarios de mesa con espiral personalizados para empresas en Barcelona. Calidad y diseño exclusivo para tus campañas promocionales.",
  keywords: [
    "Calendarios de mesa con espiral personalizados", 
    "Impresión de calendarios de mesa Barcelona", 
    "Calendarios promocionales de mesa", 
    "Calendarios de mesa para empresas",
    "Diseño de calendarios de mesa con espiral",
    "Calendarios de escritorio personalizados",
    "Calendarios publicitarios de mesa",
    "Impresión de calendarios en Barcelona",
    "Calendarios personalizados para oficina",
    "Comprar calendarios de mesa online"
  ],
  canonical: "https://calendarios.reprodisseny.com/calendario-mesa-espiral",
  jsonLd: {
    "@context": "https://schema.org",
    "@type": "Product",
    "name": "Calendarios de Mesa con Espiral Personalizados",
    "description": "Personaliza calendarios de mesa con espiral para destacar tu marca en oficinas y escritorios durante todo el año.",
    "image": `${Img1.src}`,
    "brand": {
      "@type": "Brand",
      "name": "Repro Disseny" 
    },
    "offers": {
      "@type": "Offer",
      "url": "https://calendarios.reprodisseny.com/calendario-mesa-espiral",
      "priceCurrency": "EUR",
      "price": "4.99",
      "availability": "https://schema.org/InStock"
    },
    "keywords": "calendarios de mesa con espiral, calendarios promocionales, impresión de calendarios, comprar calendarios mesa online, imprenta de calendarios en Barcelona"
  }
};

const title = "Calendarios de Mesa con Espiral personalizados";
const subtitle = "Personaliza calendarios de mesa con espiral para tu empresa. Ideales para promociones empresariales y visibilidad de marca. Solicita tu presupuesto personalizado hoy.";
const tagline = "calendarios mesa espiral";
const tipoCalendario = "mesa-espiral";
---

<Layout metadata={metadata}>
  <Hero2
    tagline={tagline}
    title={title}
    subtitle={subtitle}
    actions={[
      { variant: 'primary', text: 'Pide tu oferta!', href: `/solicitud-presupuesto?tipo_calendario=${tipoCalendario}`, icon: 'tabler:square-rounded-arrow-right' },
      { text: 'Saber más', href: '#features' },
    ]}
    galleryImages={galleryImages}
  />

  <Features 
    id="features"
    tagline="Características Clave"
    title="Calendarios de Mesa con Espiral para Empresas"
    subtitle="Nuestros calendarios de mesa con espiral combinan calidad y estilo, perfectos para oficinas y promociones empresariales."
    items={[
      {
        title: 'Impresión Personalizada',
        description: 'Calendarios de mesa con espiral totalmente personalizables, perfectos para destacar en oficinas y escritorios.',
        icon: 'tabler:calendar',
      },
      {
        title: 'Alta Calidad de Impresión',
        description: 'Impresión en alta resolución para una imagen nítida y duradera.',
        icon: 'tabler:printer',
      },
      {
        title: 'Formato Compacto',
        description: 'Diseño que se adapta a cualquier espacio de trabajo, siendo funcional y promocional.',
        icon: 'tabler:file-signal',
      },
      {
        title: 'Entrega en Barcelona',
        description: 'Entrega rápida en península y personalización sin límites.',
        icon: 'tabler:truck',
      },
      {
        title: 'Ideal para Escritorio',
        description: 'Diseño para empresas que desean una presencia visual constante.',
        icon: 'tabler:building',
      },
      {
        title: 'Formato Espiral',
        description: 'Fácil de usar y práctico, pensado para espacios de trabajo.',
        icon: 'tabler:wall',
      },
    ]}
  />
  
  <CallToActionProps 
    title={title}
    subtitle={subtitle}
    tagline={tagline}
    actions={[
      {
        variant: 'primary',
        text: 'Solicita tu presupuesto personalizado',
        href: `/solicitud-presupuesto`,
        icon: 'tabler:mail',
      },
    ]}  
    id="cta-calendarios-mesa-espiral"
    isDark={false}
    classes={{ container: 'custom-container-class' }}
  /> 
</Layout>
