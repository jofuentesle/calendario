---
import Layout from '~/layouts/LandingLayout2.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import CallToActionProps from '~/components/widgets/CallToAction.astro';

// Imágenes específicas para calendario de mesa triangular
import Img1 from '~/assets/images/mesa/SobremesaTriangular.jpg';
import Img2 from '~/assets/images/mesa/SobremesaTriangular1.jpg';
import Img3 from '~/assets/images/mesa/SobremesaTriangular2.jpg';
import Img4 from '~/assets/images/mesa/SobremesaTriangular3.jpg';

const galleryImages = [
  { src: Img1.src, alt: 'Calendario de mesa triangular personalizado 2025' },
  { src: Img2.src, alt: 'Calendario de escritorio triangular 2025 para empresas' },
  { src: Img3.src, alt: 'Diseño de calendario triangular de escritorio' },
  { src: Img4.src, alt: 'Calendario promocional de escritorio triangular' },
];

const metadata = {
  title: "Calendarios de Mesa Triangular Personalizados | Impresión en Barcelona",
  description: "Calendarios de mesa triangular personalizados para empresas. La opción ideal para visibilidad de marca en escritorios y oficinas.",
  keywords: [
    "Calendarios de mesa triangular personalizados", 
    "Calendarios de escritorio en Barcelona", 
    "Calendarios de empresa triangular",
    "Calendarios de escritorio personalizados",
    "Diseño de calendarios triangulares",
    "Calendarios de escritorio promocionales",
    "Calendarios publicitarios",
    "Imprimir calendarios en Barcelona",
    "Calendarios personalizados para empresas",
    "Comprar calendarios de mesa online"
  ],
  canonical: "https://calendarios.reprodisseny.com/calendario-mesa-triangular",
  jsonLd: {
    "@context": "https://schema.org",
    "@type": "Product",
    "name": "Calendarios de Mesa Triangular Personalizados",
    "description": "Imprime calendarios de escritorio en formato triangular para promoción empresarial durante todo el año.",
    "image": `${Img1.src}`,
    "brand": {
      "@type": "Brand",
      "name": "Repro Disseny" 
    },
    "offers": {
      "@type": "Offer",
      "url": "https://calendarios.reprodisseny.com/calendario-mesa-triangular",
      "priceCurrency": "EUR",
      "price": "5.49",
      "availability": "https://schema.org/InStock"
    },
    "keywords": "calendarios de mesa triangular, calendarios promocionales, impresión de calendarios, comprar calendarios mesa online, imprenta de calendarios en Barcelona"
  }
};

const title = "Calendarios de Mesa Triangular personalizados";
const subtitle = "Personaliza calendarios de mesa en formato triangular, perfectos para destacar en oficinas y áreas de trabajo. Solicita tu presupuesto personalizado hoy mismo.";
const tagline = "calendarios mesa triangular";
const tipoCalendario = "mesa-triangular";
---

<Layout metadata={metadata}>
  <Hero2
    tagline={tagline}
    title={title}
    subtitle={subtitle}
    actions={[
      { variant: 'primary', text: 'Pide tu oferta!', href: `/solicitud-presupuesto?tipo_calendario=${tipoCalendario}`, icon: 'tabler:square-rounded-arrow-right' },
      { text: 'Saber más', href: '#features' },
    ]}
    galleryImages={galleryImages}
  />

  <Features 
    id="features"
    tagline="Características Clave"
    title="Calendarios de Mesa Triangular para Empresas"
    subtitle="Nuestros calendarios de mesa triangulares ofrecen una excelente visibilidad de marca, ideales para entornos corporativos."
    items={[
      {
        title: 'Impresión Personalizada',
        description: 'Calendarios triangulares personalizables, ideales para escritorio o áreas de trabajo.',
        icon: 'tabler:calendar',
      },
      {
        title: 'Diseño Compacto',
        description: 'Formato triangular que ocupa poco espacio y resulta muy práctico.',
        icon: 'tabler:file-signal',
      },
      {
        title: 'Alta Calidad de Impresión',
        description: 'Calidad superior en cada detalle, asegurando una presencia profesional.',
        icon: 'tabler:printer',
      },
      {
        title: 'Entrega rápida en Barcelona',
        description: 'Opciones de entrega eficientes para pedidos corporativos y promocionales.',
        icon: 'tabler:truck',
      },
      {
        title: 'Ideal para Escritorios',
        description: 'Formato perfecto para empresas que desean destacar en oficinas y espacios corporativos.',
        icon: 'tabler:building',
      },
      {
        title: 'Estructura Estable',
        description: 'Diseño triangular que se adapta a cualquier escritorio con estabilidad.',
        icon: 'tabler:wall',
      },
    ]}
  />
  
  <CallToActionProps 
    title={title}
    subtitle={subtitle}
    tagline={tagline}
    actions={[
      {
        variant: 'primary',
        text: 'Solicita tu presupuesto personalizado',
        href: `/solicitud-presupuesto?tipo_calendario=${tipoCalendario}`,
        icon: 'tabler:mail',
      },
    ]}  
    id="cta-calendarios-mesa-triangular"
    isDark={false}
    classes={{ container: 'custom-container-class' }}
  /> 
</Layout>
