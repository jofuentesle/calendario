---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';

const metadata = {
  title: 'Solicitud de presupuesto para Calendarios de Mesa Triangular',
};

const tipoCalendario = 'mesa-triangular';
const title = 'Solicita tu presupuesto para Calendarios de Mesa Triangular';
const subtitle = 'Rellena el formulario para obtener un presupuesto personalizado para tus calendarios de mesa triangular.';
---

<Layout metadata={metadata}>
  <HeroText title={title} subtitle={subtitle} />

  <div class="max-w-xl mx-auto bg-white p-6 rounded-lg shadow-lg">
    <form id="form-presupuesto-triangular" class="space-y-6">
      <!-- Nombre -->
      <div>
        <label for="nombre-triangular" class="block text-sm font-medium text-gray-700">Nombre</label>
        <input
          type="text"
          name="nombre-triangular"
          id="nombre-triangular"
          class="block w-full px-4 py-2 mt-1 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
          placeholder="Tu nombre"
          required
        />
      </div>

      <!-- Email -->
      <div>
        <label for="email-triangular" class="block text-sm font-medium text-gray-700">Correo electrónico</label>
        <input
          type="email"
          name="email-triangular"
          id="email-triangular"
          class="block w-full px-4 py-2 mt-1 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
          placeholder="Tu correo"
          required
        />
      </div>

      <!-- Teléfono -->
      <div>
        <label for="telefono-triangular" class="block text-sm font-medium text-gray-700">Teléfono</label>
        <input
          type="tel"
          name="telefono-triangular"
          id="telefono-triangular"
          class="block w-full px-4 py-2 mt-1 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
          placeholder="Tu teléfono"
          required
        />
      </div>

      <!-- Empresa -->
      <div>
        <label for="empresa-triangular" class="block text-sm font-medium text-gray-700">Empresa (Opcional)</label>
        <input
          type="text"
          name="empresa-triangular"
          id="empresa-triangular"
          class="block w-full px-4 py-2 mt-1 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
          placeholder="Tu empresa"
        />
      </div>

      <!-- Campo oculto para el tipo de calendario -->
      <input type="hidden" name="tipo" value={tipoCalendario} />

      <!-- Selector de medidas -->
      <div>
        <label for="medida-triangular" class="block text-sm font-medium text-gray-700">Medida</label>
        <select
          id="medida-triangular"
          name="medida-triangular"
          class="block w-full px-4 py-2 mt-1 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
          required
        >
          <option value="15x15 cm">15x15 cm</option>
          <option value="21x10 cm">21x10 cm</option>
          <option value="Din A5">Din A5</option>
        </select>
      </div>

      <!-- Selector de cantidad -->
      <div>
        <label for="cantidad-triangular" class="block text-sm font-medium text-gray-700">Cantidad</label>
        <select id="cantidad-triangular" name="cantidad-triangular" class="block w-full px-4 py-2 mt-1 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required>
          <option value="100">100</option>
          <option value="200">200</option>
          <option value="500">500</option>
          <option value="750">750</option>
          <option value="1000">1000</option>
        </select>
      </div>

      <!-- Políticas de privacidad -->
      <div class="flex items-center">
        <input
          type="checkbox"
          id="politicas-privacidad-triangular"
          name="politicas-privacidad-triangular"
          required
          class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
        />
        <label for="politicas-privacidad-triangular" class="ml-2 block text-sm text-gray-700">
          He leído y acepto las políticas de Privacidad.
        </label>
      </div>

      <!-- Feedback messages -->
      <div id="feedback-triangular" class="hidden p-4 text-white rounded-md"></div>

      <button
        type="submit"
        class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
      >
        Solicitud de precio
      </button>
    </form>
  </div>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('form-presupuesto-triangular');
    const feedback = document.getElementById('feedback-triangular');

    if (form) {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();  // Evita recargar la página

        const formData = new FormData(e.target);  // Obtener los datos del formulario
        const data = Object.fromEntries(formData.entries());  // Convertir a objeto

        try {
          const response = await fetch('/api/send-email', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data),
          });

          if (response.ok) {
            feedback.textContent = 'Correo enviado correctamente';
            feedback?.classList.remove('hidden', 'bg-red-500');
            feedback?.classList.add('bg-green-500');
            e.target.reset();
          } else {
            feedback.textContent = 'Error al enviar el correo';
            feedback?.classList.remove('hidden', 'bg-green-500');
            feedback?.classList.add('bg-red-500');
          }
        } catch (error) {
          console.error('Error al enviar el formulario:', error);
          feedback.textContent = 'Error en el envío del formulario';
          feedback?.classList.remove('hidden', 'bg-green-500');
          feedback?.classList.add('bg-red-500');
        }
      });
    } else {
      console.error('Formulario no encontrado');
    }
  });
</script>
